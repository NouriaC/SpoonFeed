<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="container mt-5">
  <div class="row">
    <div class="col mb-5">
      <h1>All Restaurants</h1>
    </div>
  </div>
</div>
<div class="cards d-flex flex-wrap justify-content-around ">
    <% @restaurants.each do |restaurant| %>
      <div class="card mb-5 text-center" style="width: 18rem;">
          <div class="card-body">
            <h3 class="card-title"><%= restaurant.name.capitalize %></h3>
            <p><%= restaurant.user_id %> </p>
            <% if restaurant.photo.attached?  %>
              <%= cl_image_tag restaurant.photo.key, height: 300, width: 200, crop: :fill %>
              <% end %>
          </div>
        <%= link_to 'See details', restaurant_path(restaurant), class: "btn" %>
         </div>
    <% end %>
</div>

<%= link_to "Create a restaurant", new_restaurant_path %>

